	static void pattern2(int n ) {

			// for every row run the col
			for(int col =1;col<=n;col++) {
				for( int row =1;row<=col;row++) {
			
				System.out.print("* ");
			}
			// after printing one row, we need to add new line
			System.out.println();
			
		}
		
	}

}
 